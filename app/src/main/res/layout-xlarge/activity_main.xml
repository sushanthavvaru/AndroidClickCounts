<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sushanth.clickcount.MainActivity">

    <Button
        android:text="@string/CLICK"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/button1"
        android:onClick="countIncrease"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bcvalue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignBaseline="@+id/bccount"
        android:layout_alignBottom="@+id/bccount"
        android:layout_alignStart="@+id/counterValue" />

    <TextView
        android:text="@string/ButtonCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttoncount"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/BackgroundCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bccount"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="259dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counterValue"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_alignBaseline="@+id/buttoncount"
        android:layout_alignBottom="@+id/buttoncount"
        android:layout_toEndOf="@+id/button1" />
</RelativeLayout>
